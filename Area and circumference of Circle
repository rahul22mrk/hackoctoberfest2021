import math as m
r = float(input("Enter the radius of the circle :")) #Enter radius of the circle

def area_perimeter(radius):
    print("The area of the cirlce of radius {} is : {}".format(r,m.pi*r**2))
    print("The perimeter of the circle of radius {} is : {}".format(r,2*m.pi*r))

area_perimeter(r)
